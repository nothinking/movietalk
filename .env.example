# MovieTalk 환경 설정 파일
# .env 파일로 복사하여 사용하세요

# Anthropic Claude API 키
# https://console.anthropic.com 에서 발급받으세요
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxx

# 선택사항: 로그 레벨
# DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 선택사항: 배치 크기 (generate_pronunciation.py에서 사용)
# 범위: 1-20 (기본값: 5)
BATCH_SIZE=5

# 선택사항: API 타임아웃 (초)
API_TIMEOUT=30

# 선택사항: 자막 언어
# ko (한글), en (영어)
SUBTITLE_LANGUAGE=en
